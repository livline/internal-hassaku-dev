            .page-body-wrapper.sidebar-icon
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-header
                            .row
                                .col-lg-6
                                    ol.breadcrumb
                                      li.breadcrumb-item
                                        a(href='index.html')
                                         i.f-16.fa.fa-home
                                      li.breadcrumb-item Form Controls
                                      li.breadcrumb-item Input group
                                    h3
                                      | Input groups
                                .col-lg-6
                                  include ../../components/bookmark
                    // Container-fluid starts
                    .container-fluid
                      .row
                        .col-sm-12
                          .card
                            .card-header
                              h5 Basic Input groups
                            .card-body
                              .row
                                .col
                                  form
                                    .mb-3.m-form__group
                                      label.mb-2 Left Addon
                                      .input-group
                                        span.input-group-text @
                                        input.form-control(type='text', placeholder='Email')
                                    .mb-3
                                      label.mb-2 Right Addon
                                      .input-group
                                        input.form-control(type='text', placeholder="Recipient's username", aria-label="Recipient's username")
