- var theme_customizer      = true;
- var time_picker           = true;
doctype html
html(lang='en')
    include ../../components/header-files
    body
        include ../../components/loader
        // page-wrapper Start
        #pageWrapper.page-wrapper.compact-wrapper
            include ../../components/header
            // Page Body Start
            .page-body-wrapper.sidebar-icon
                include ../../components/sidebar
                .page-body
                    .container-fluid
                        .page-header
                            .row
                                .col-lg-6
                                    ol.breadcrumb
                                      li.breadcrumb-item
                                        a(href='index.html')
                                         i.f-16.fa.fa-home
                                      li.breadcrumb-item Form Widgets
                                      li.breadcrumb-item Time Picker
                                    h3
                                      | Time Picker
                                .col-lg-6
                                  include ../../components/bookmark
                    // Container-fluid starts
                    .container-fluid
                      .row
                        .col-md-6
                          .card
                            .card-header
                              h5 Default:
                            .card-body
                              form.theme-form
                                
                                  .input-group.clockpicker
                                    input.form-control(type='text', value='09:30')
                                    span.input-group-addon
                                      span.glyphicon.glyphicon-time
                        .col-md-6
                          .card
                            .card-header
                              h5 Align the arrow to top, auto close:
                            .card-body
                              form.theme-form
                                
                                  .input-group.clockpicker.pull-center(data-bs-placement='left', data-align='top', data-autoclose='true')
                                    input.form-control(type='text', value='13:14')
                                    span.input-group-addon
                                      span.glyphicon.glyphicon-time
                        .col-md-6
                          .card
                            .card-header
                              h5 Set options in javascript, instead of data-* :
                            .card-body
                              form.theme-form
                                
                                  .input-group.clockpicker(data-bs-placement='top', data-align='left', data-donetext='Done')
                                    input.form-control(type='text', value='18:00')
                                    span.input-group-addon
                                      span.glyphicon.glyphicon-time
                        .col-md-6
                          .card
                            .card-header
                              h5 Set default value, input without addon:
                            .card-body
                              .clearfix
                                form.theme-form
                                  
                                    input#single-input.form-control(type='text', value='', placeholder='Addon')

                    // Container-fluid ends                    
                include ../../components/footer
        include ../../components/footer-files
